---
/**
 * Base Layout Component
 * @author andreas@siglochconsulting.de
 */

import { siteConfig, organizationSchema } from '@lib/config';
import { getLocaleFromUrl, getHtmlLang, getAllLocalizedPaths, locales } from '@i18n/index';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = siteConfig.description,
  ogImage = siteConfig.seo.defaultOgImage
} = Astro.props;

const locale = getLocaleFromUrl(Astro.url);
const htmlLang = getHtmlLang(locale);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const alternateUrls = getAllLocalizedPaths(Astro.url.pathname);
---

<!DOCTYPE html>
<html lang={htmlLang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="canonical" href={canonicalURL}>

  <!-- hreflang Tags for SEO -->
  {locales.map((loc) => (
    <link rel="alternate" hreflang={loc} href={new URL(alternateUrls[loc], Astro.site)} />
  ))}
  <link rel="alternate" hreflang="x-default" href={new URL(alternateUrls.de, Astro.site)} />

  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content={siteConfig.contact.name}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, Astro.site)}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={new URL(ogImage, Astro.site)}>

  <!-- Sitemap -->
  <link rel="sitemap" href="/sitemap-index.xml">

  <!-- Schema.org markup -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

  <!-- Global Styles -->
  <style is:global>
    @import '../styles/global.css';
  </style>
</head>
<body>
  <slot />
</body>
</html>
