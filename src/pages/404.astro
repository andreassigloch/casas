---
/**
 * 404 Error Page
 * @author andreas@siglochconsulting.de
 *
 * Custom 404 page - displayed when page not found
 */
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Seite nicht gefunden - Sesimbrinha</title>
  <style>
    @import url('../styles/tokens.css');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-body);
      background: var(--color-background);
      color: var(--color-text);
      padding: var(--space-8);
      line-height: var(--leading-normal);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    .container {
      max-width: 600px;
      text-align: center;
    }

    .error-box {
      background: var(--color-background-alt);
      padding: var(--space-8);
      border-radius: var(--radius-lg);
      border: 1px solid var(--color-gray-200);
    }

    h1 {
      font-size: var(--text-4xl);
      font-weight: var(--font-bold);
      color: var(--color-primary);
      margin-bottom: var(--space-4);
    }

    p {
      font-size: var(--text-lg);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-8);
    }

    .home-link {
      display: inline-block;
      background: var(--color-primary);
      color: var(--color-background);
      padding: var(--space-4) var(--space-8);
      border-radius: var(--radius-base);
      text-decoration: none;
      font-weight: var(--font-semibold);
      font-size: var(--text-lg);
      transition: background var(--transition-fast);
    }

    .home-link:hover {
      background: var(--color-primary-700);
    }

    @media (max-width: 640px) {
      body {
        padding: var(--space-4);
      }

      h1 {
        font-size: var(--text-3xl);
      }

      p {
        font-size: var(--text-base);
      }

      .home-link {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="error-box" data-testid="error-box">
      <h1 data-testid="error-heading">Seite nicht gefunden</h1>
      <p data-testid="error-message">
        Die gesuchte Seite konnte leider nicht gefunden werden.
      </p>
      <a href="/" class="home-link" data-testid="home-link">
        Zur√ºck zur Startseite
      </a>
    </div>
  </div>
</body>
</html>
