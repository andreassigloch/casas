---
/**
 * Footer Component
 * @author andreas@siglochconsulting.de
 *
 * Footer with gradient background pattern and social links
 */

import { siteConfig } from '@lib/config';
---

<footer class="footer">
  <div class="footer-background"></div>
  <div class="footer-content container">
    <div class="footer-section">
      <h3 class="footer-heading">{siteConfig.name}</h3>
      <p class="footer-text">
        {siteConfig.description}
      </p>
    </div>

    <div class="footer-section">
      <h4 class="footer-heading">Navigation</h4>
      <ul class="footer-links">
        <li><a href="/" data-testid="footer-link-home">Startseite</a></li>
        <li><a href="/angebot" data-testid="footer-link-services">Angebot</a></li>
        <li><a href="/kontakt" data-testid="footer-link-contact">Kontakt</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4 class="footer-heading">Rechtliches</h4>
      <ul class="footer-links">
        <li><a href="/impressum" data-testid="footer-link-imprint">Impressum</a></li>
        <li><a href="/datenschutz" data-testid="footer-link-privacy">Datenschutzerkl√§rung</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4 class="footer-heading">Kontakt</h4>
      <div class="footer-contact">
        <a href={`mailto:${siteConfig.contact.email}`} aria-label="Email" data-testid="footer-contact-email">
          <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path d="M0 3v18h24v-18h-24zm21.518 2l-9.518 7.713-9.518-7.713h19.036zm-19.518 14v-11.817l10 8.104 10-8.104v11.817h-20z"/>
          </svg>
        </a>
        {siteConfig.contact.phone && (
          <a href={`tel:${siteConfig.contact.phone.replace(/\s/g, '')}`} aria-label="Telefon" data-testid="footer-contact-phone">
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 22.621l-3.521-6.795c-.008.004-1.974.97-2.064 1.011-2.24 1.086-6.799-7.82-4.609-8.994l2.083-1.026-3.493-6.817-2.106 1.039c-7.202 3.755 4.233 25.982 11.6 22.615.121-.055 2.102-1.029 2.11-1.033z"/>
            </svg>
          </a>
        )}
      </div>
      <p class="footer-text" style="margin-top: var(--space-4);">
        <strong>{siteConfig.contact.name}</strong><br>
        {siteConfig.contact.address.street}<br>
        {siteConfig.contact.address.zip} {siteConfig.contact.address.city}<br>
        {siteConfig.contact.phone && (
          <>Tel: <a href={`tel:${siteConfig.contact.phone.replace(/\s/g, '')}`}>{siteConfig.contact.phone}</a></>
        )}
      </p>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <p>&copy; {new Date().getFullYear()} {siteConfig.name}. Alle Rechte vorbehalten.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    background: var(--color-primary-900);
    color: var(--color-primary-100);
    overflow: hidden;
  }

  .footer-background {
    display: none;
  }

  .footer-content {
    position: relative;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
    padding: var(--space-16) var(--container-padding);
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-heading {
    color: white;
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-4);
  }

  .footer-text {
    color: var(--color-primary-100);
    line-height: var(--leading-relaxed);
    margin-bottom: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: var(--space-2);
  }

  .footer-links a {
    color: var(--color-primary-200);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: white;
  }

  .footer-contact {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-2);
  }

  .footer-contact a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-primary-200);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .footer-contact a:hover {
    color: white;
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .footer-bottom {
    position: relative;
    text-align: center;
    padding: var(--space-6) var(--container-padding);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    color: var(--color-primary-100);
    font-size: var(--text-sm);
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      padding: var(--space-12) var(--container-padding);
    }
  }
</style>
